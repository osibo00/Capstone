<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/blastoff_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_padding">

        <ImageView
            android:id="@+id/mars_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mars"
            android:visibility="invisible"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/rocket_ship"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rocket_ship"
            android:visibility="invisible"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/astronaut_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/astronaut"
            android:visibility="invisible"
            tools:visibility="visible" />

        <!-- PLACE TEXT HERE INSTEAD OF APP NAME -->
        <TextView
            android:id="@+id/explore_frag_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rocket_ship"
            android:layout_marginTop="@dimen/child_view_padding"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/activity_padding"
        android:text="@string/tap_anywhere_to_continue"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:textColor="@color/alpha_white"
        android:textSize="15sp" />

</FrameLayout>