<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/blastoff_bg"
        android:tint="@color/alpha_black02" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_padding">

        <FrameLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/black_hole"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/black_hole" />

            <ImageView
                android:id="@+id/astronaut_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/astronaut02"
                android:visibility="invisible"
                tools:visibility="visible" />

        </FrameLayout>

        <TextView
            android:id="@+id/explore_frag_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_layout"
            android:layout_marginTop="@dimen/activity_padding"
            android:text="@string/want_to_walk_on_the_moon"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="invisible"
            tools:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/activity_padding"
        android:text="@string/tap_anywhere_to_continue"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:textColor="@color/alpha_black04"
        android:textSize="25sp"
        android:textStyle="bold" />

</FrameLayout>