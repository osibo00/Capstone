<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="productions.darthplagueis.capstone.OnBoardingActivity"
    android:background="@color/colorBG2">

    <!-- Nothing needs be to be done except for colors and backgrounds
    to be implemented -->

    <RelativeLayout
        android:id="@+id/viewpager_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:tabTextColor="@color/white"
            android:background="@color/colorBG0"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/white"/>
        <!--change the color of text in tab in viewpager-->

    </RelativeLayout>

</FrameLayout>
