<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="productions.darthplagueis.capstone.MainActivity"
    android:background="@color/colorBG2">

    <!-- TEMPORARY TESTING XML -->

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/ar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view"
        android:layout_centerInParent="true"
        android:text="Continue to AR"
        android:textColor="@color/white"
        android:visibility="visible"
        tools:visibility="visible"
        android:background="@drawable/button_bg_stroke" />

    <Button
        android:id="@+id/intent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ar_button"
        android:layout_centerInParent="true"
        android:text="Continue to info"
        android:textColor="@color/white"
        android:background="@drawable/button_bg_stroke"/>

</RelativeLayout>
