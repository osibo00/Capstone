<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="productions.darthplagueis.capstone.InfoActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coord_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="@dimen/article_key_lines"
                app:expandedTitleMarginStart="@dimen/md_key_lines"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <View
                        android:layout_width="@dimen/divider_width"
                        android:layout_height="@dimen/indicator_height"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/activity_padding"
                        android:layout_marginStart="@dimen/activity_padding"
                        android:background="@color/colorBGC2" />

                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/layout_textcard_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/layout_textview_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/child_view_padding"
                            android:text="@string/explore_another_world"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout_textview_01"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/card_relative_layout_01"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:id="@+id/card_imageview_01"
                                        android:layout_width="match_parent"
                                        android:layout_height="125dp"
                                        android:layout_margin="@dimen/child_view_padding"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/space_rover01" />

                                    <TextView
                                        android:id="@+id/card_textview_01"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/card_imageview_01"
                                        android:background="@color/white"
                                        android:paddingBottom="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingStart="4dp"
                                        android:text="@string/opportunity"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/card_relative_layout_02"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:id="@+id/card_imageview_02"
                                        android:layout_width="match_parent"
                                        android:layout_height="125dp"
                                        android:layout_margin="@dimen/child_view_padding"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/space_rover03" />

                                    <TextView
                                        android:id="@+id/card_textview_02"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/card_imageview_02"
                                        android:background="@color/white"
                                        android:paddingBottom="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingStart="4dp"
                                        android:text="@string/spirit"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/card_relative_layout_03"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:id="@+id/card_imageview_03"
                                        android:layout_width="match_parent"
                                        android:layout_height="125dp"
                                        android:layout_margin="@dimen/child_view_padding"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/space_rover02" />

                                    <TextView
                                        android:id="@+id/card_textview_03"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/card_imageview_03"
                                        android:background="@color/white"
                                        android:paddingBottom="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingStart="4dp"
                                        android:text="@string/curiosity"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/layout_textcard_02"
                    android:layout_width="match_parent"
                    android:layout_below="@id/layout_textcard_01"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/layout_textview_02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/child_view_padding"
                            android:text="placeholder"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="25sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout_textview_02"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/card_relative_layout_04"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:id="@+id/card_imageview_04"
                                        android:layout_width="match_parent"
                                        android:layout_height="125dp"
                                        android:layout_margin="@dimen/child_view_padding"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/rockets_01" />

                                    <TextView
                                        android:id="@+id/card_textview_04"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/card_imageview_04"
                                        android:background="@color/white"
                                        android:paddingBottom="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingStart="4dp"
                                        android:text="@string/past_launches"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/card_relative_layout_05"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:id="@+id/card_imageview_05"
                                        android:layout_width="match_parent"
                                        android:layout_height="125dp"
                                        android:layout_margin="@dimen/child_view_padding"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/rockets_02" />

                                    <TextView
                                        android:id="@+id/card_textview_05"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/card_imageview_05"
                                        android:background="@color/white"
                                        android:paddingBottom="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingStart="4dp"
                                        android:text="@string/rocket_details"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="2dp"
                                app:cardElevation="6dp"
                                app:cardUseCompatPadding="true">

                                <RelativeLayout
                                    android:id="@+id/card_relative_layout_06"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <ImageView
                                        android:id="@+id/card_imageview_06"
                                        android:layout_width="match_parent"
                                        android:layout_height="125dp"
                                        android:layout_margin="@dimen/child_view_padding"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/rockets_03" />

                                    <TextView
                                        android:id="@+id/card_textview_06"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/card_imageview_06"
                                        android:background="@color/white"
                                        android:paddingBottom="4dp"
                                        android:paddingEnd="4dp"
                                        android:paddingStart="4dp"
                                        android:text="@string/upcoming_launches"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textSize="15sp" />

                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
